window wmain {
	title "fmedia"
	position 0 0 500 400
	icon {
		filename "fmedia.ico"
	}

	mainmenu mm {
		item $MMFile {
			submenu mfile
		}
		item $MMList {
			submenu mlist
		}
		item $MMPlayback {
			submenu mplay
		}
		item $MMConvert {
			submenu mconvert
		}
		item $MMHelp {
			submenu mhelp
		}
	}

	button bpause {
		style horizontal
		action A_PLAYPAUSE
		icon {
			filename "play.ico"
		}
	}

	button bstop {
		style horizontal
		action A_STOP
		icon {
			filename "stop.ico"
		}
	}

	button bprev {
		style horizontal
		action A_PREV
		icon {
			filename "prev.ico"
		}
	}

	button bnext {
		style horizontal
		action A_NEXT
		icon {
			filename "next.ico"
		}
	}

	label lpos {
		style horizontal
	}

	trackbar tvol {
		style horizontal
		range 125
		value 100
		onscroll A_VOL
	}

	trackbar tpos {
		range 0
		onscroll A_SEEK
	}

	tab tabs {
		onchange A_LIST_SEL
	}

	listview vlist {
		style grid_lines multi_select
		dblclick A_PLAY

		column "#" {
			width 35
		}
		column $LCArtist {
		}
		column $LCTitle {
			width 200
		}
		column $LCDuration {
			width 50
		}
		column $LCInfo {
		}
		column $LCDate {
		}
		column $LCAlbum {
		}
		column $LCFilename {
		}
	}
	statusbar stbar {
	}
	trayicon tray_icon {
		lclick A_SHOW
	}
}

window wconvert {
	position 300 100 500 500
	title $WTConvert
	popupfor wmain

	mainmenu mmconv {
		item $CMMConvert {
			action A_CONVERT
		}
		item $CMMMoveUntilPositionSeek {
			action A_CONV_MOVE_UNTIL
		}
	}

	label lfn {
		text "Convert selected files to:"
	}

	editbox eout {
		style horizontal
	}

	button boutbrowse {
		style horizontal
		text "..."
		action A_CONVOUTBROWSE
	}
	listview vconfig {
		style editable grid_lines
		column Name {
			width 200
		}
		column Value {
			width 200
		}
	}
}

window wabout {
	title $WTAboutfmedia
	popupfor wmain

	label labout {
	}

	label lurl {
	}
}

window wuri {
