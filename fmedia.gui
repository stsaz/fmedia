	}
	item "&Next" {
		action NEXT
		hotkey "N"
	}
	item "P&revious" {
		action PREV
		hotkey "P"
	}
	item "-" {
	}
	item "Seek &Forward" {
		action FFWD
		hotkey "Right"
	}
	item "Seek &Back" {
		action RWND
		hotkey "Left"
	}
	item "Leap Forward" {
		action LEAP_FWD
		hotkey "Ctrl+Right"
	}
	item "Leap Back" {
		action LEAP_BACK
		hotkey "Ctrl+Left"
	}
	item "Go To..." {
		action GOTO_SHOW
		hotkey "Ctrl+G"
	}
	item "Set Marker" {
		action SETGOPOS
		hotkey "Shift+G"
	}
	item "Jump To Marker" {
		action GOPOS
		hotkey "G"
	}
	item "-" {
	}
	item "Volume &Up" {
		action VOLUP
		hotkey "Up"
	}
	item "Volume &Down" {
		action VOLDOWN
		hotkey "Down"
	}
