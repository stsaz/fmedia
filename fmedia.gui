	}
	item "Add &URL..." {
		action ADDURL
		hotkey "Ctrl+U"
	}
	item "-" {
	}
	item "Show Media Info" {
		action SHOWINFO
		hotkey "I"
	}
	item "C&opy to Clipboard" {
		action COPYFILE
		hotkey "Ctrl+C"
	}
	item "Copy File&name to Clipboard" {
		action COPYFN
	}
	item "Open Fo&lder" {
		action SHOWDIR
	}
	item "&Delete From Disk" {
		action DELFILE
		hotkey "Shift+Delete"
	}
	item "-" {
	}
