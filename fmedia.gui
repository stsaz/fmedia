window wfilter {
	parent wmain
	title "Filter Tracks"
	position 300 300 300 100
	style popup
	opacity 90
	font {
		name Arial
		height 10
	}

	editbox ttext {
		position 0 0 150 25
		style visible
		onchange FILTER_APPLY
	}

	button breset {
		position 150 0 50 25
		style visible
		text "Reset"
		action FILTER_RESET
	}

	checkbox cbfilename {
		position 0 35 150 25
		style visible checked
		text "Search in file names"
	}

	paned pntext {
		child ttext {
			resize cx
		}
		child breset {
			move x
		}
	}
}
