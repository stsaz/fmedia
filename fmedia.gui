		position 0 0 100 100
		style visible
		font {
			name "Courier New"
			height 8
		}
	}

	paned pnlog {
		child tlog {
			resize cx cy
		}
	}
}

window wuri {
	parent wmain
	title "Add URL"
	position 300 300 400 100
	style popup
	font {
		name Arial
		height 10
	}

	editbox turi {
		position 0 0 100 25
		style visible
	}

	button bok {
		position 0 25 50 25
		style visible
		text "OK"
